{
  "name": "@leadhome/hydrogen",
  "version": "0.0.1",
  "description": "Utility libraries to use at Leadhome.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build": "nwb build-react-component",
    "clean": "nwb clean-module && nwb clean-demo",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release",
    "start": "nwb serve-react-demo",
    "test": "nwb test-react",
    "test:coverage": "nwb test-react --coverage",
    "test:watch": "nwb test-react --server"
  },
  "dependencies": {
    "@leadhome/eslint-config": "^1.2.1"
  },
  "peerDependencies": {
    "react": "16.x"
  },
  "devDependencies": {
    "nwb": "0.23.x",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "semantic-release": "^15.13.18"
  },
  "author": "Seagyn Davis",
  "homepage": "https://www.leadhome.co.za",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/leadhomesa/utilities.git"
  },
  "keywords": [
    "react-component"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": "@leadhome/eslint-config/.prettierrc.json"
}
